@model TP_Pweb.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Estado Reserva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.PrimeiroNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Modelo) '@Html.DisplayFor(model => model.Veiculo.Id)'
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.preco)
        </dd>

        @if (Model.state.Equals(Reserva.State.Decorrer))
        {
            foreach (var estado in Model.estados)
            {
                <dt class = "col-sm-2">
                    Funcionario Entrega
                </dt>
                <dd class = "col-sm-10">   
                    
                </dd>
                <dt class = "col-sm-2">
                    Km Iniciais
                </dt>
                <dd class = "col-sm-10">   

                </dd>
                <dt class = "col-sm-2">
                    Observações
                </dt>
                <dd class = "col-sm-10">   

                </dd>
                <dt class = "col-sm-2">   
                    Danos
                </dt>
                <dd class = "col-sm-10">   
                    
                </dd>
                <dt class="col-sm-2">
                    Preco
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.preco)
                </dd>
            }
        }
        else if (Model.state.Equals(Reserva.State.Concluida))
        {
            foreach (var estado in Model.estados)
            {
                <dt class = "col-sm-2">
                    Funcionario Recolha
                </dt>
                <dd class = "col-sm-10"> 
                    
                </dd>
                <dt class = "col-sm-2">
                    Km Finais
                </dt>
                <dd class = "col-sm-10">   

                </dd>
                <dt class = "col-sm-2">
                    Observações
                </dt>
                <dd class = "col-sm-10">   
                    Danos
                </dd>
                <dd class = "col-sm-10">   

                </dd>
                <dt class="col-sm-2">
                    Preco
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.preco)
                </dd>
            }
        }
        }
    </dl>
</div>
<div>
    @if(User.IsInRole("Cliente")){
        <a asp-action="AsMinhasReservas">Back to List</a>
    }else{
        <a asp-action="Index">Back to List</a>
    }
</div>
