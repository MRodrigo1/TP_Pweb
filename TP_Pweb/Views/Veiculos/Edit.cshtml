@model TP_Pweb.Models.Veiculo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="Id" />
            <div>
					<label asp-for="FotoDisplay">Escolha uma imagem de perfil:</label>
					<input name="FotoVeiculo" type="file" accept=".png,.jpg,.jpeg,image/png,image/jpeg"
						   asp-for="FotoDisplay" class="form-control" /> @*TODO ONCHANGE*@
					<span asp-validation-for="FotoDisplay" class="text-danger"></span>
				</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div>
					<label>Escolha Imagens para o Veiculo:</label>
					<input name="fotosVeiculos" type="file" accept=".png,.jpg,.jpeg,image/png,image/jpeg"
						    multiple class="form-control" />
					<span class="text-danger"></span>
                    <p>Adicionar imagens</p>
            <p>Galeria de Imagens</p>
            <div class="row d-flex">

                @if (ViewBag.ficheiros == null)
                {
                    <p>Nehuma imagem inserida</p>
                }
                else
                @foreach (var file in ViewBag.ficheiros)
                {
                    <div class="col p-2 m-2"
                    style="border-radius:10px; border:1px dotted #ccc;">
                    <a asp-action="deleteImage" asp-route-id="@Model.Id" asp-route-image="@file">
                        <i class="bi bi-x-circle-fill fa-10x" style="font-size: 25px;color: red;" onclick="return confirm('Tem a certeza que deseja apagar esta imagem?')"></i>     
                    </a>

                    <img src="@file" class="img-thumbnail" style="max-width:150px; max-height:150px;" />
                    </div>
                }
            </div>
				</div>
                <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustoDia" class="control-label"></label>
                <input asp-for="CustoDia" class="form-control" />
                <span asp-validation-for="CustoDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nrKm" class="control-label"></label>
                <input asp-for="nrKm" class="form-control" />
                <span asp-validation-for="nrKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId"></select>
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
