@model TP_Pweb.Models.Veiculo

@{
    ViewData["Title"] = "Details";
    Layout = "/Views/Shared/_Layout2.cshtml";
}


<h1>Detalhes veiculo</h1>

<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoDisplay)
        </dt>
        @if (Model.FotoDisplay != null)
        {
            <dd class = "col-sm-10">
                @*TODO limitar imagem*@
                <img class="img-thumbnail" style="max-width:500px ; max-height:500px" src="data:image/*;base64,@(Convert.ToBase64String(Model.FotoDisplay))">
            </dd>
        }else{
        <dd class = "col-sm-10">
                @*TODO limitar imagem*@
                <img class="img-thumbnail" style="max-width:500px ; max-height:500px" src="~/img/defaultcar.jpg">
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localizacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localizacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustoDia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustoDia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nrKm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nrKm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.empresa.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria.Id)
        </dd>
    </dl>
</div>
   @using (Html.BeginForm("CreateFromDetails", "Reservas", FormMethod.Post))
    {
    <input type="text" name="idcar" value="@Model.Id" hidden />
    <label></label>
    <input type="date" name="DataEntrega" required
		oninvalid="this.setCustomValidity('Por Favor insira uma data de começo')" 
		oninput="setCustomValidity('')"/>
    <input type="date" name="DataRecolha" required
		oninvalid="this.setCustomValidity('Por Favor insira uma data de fim')" 
		oninput="setCustomValidity('')"/>
    <input type="submit" value="Reserva" />
}<div>
    <a asp-action="Index">Back to List</a>
</div>
