@using (Html.BeginForm("Search", "Veiculos", FormMethod.Get))
{ 
	<div class="input-group justify-content-center">
		<span class="input-group-text" ><i class="bi bi-search"></i></span>
	<input type="text" name="LocalizacaoPesquisa" required 
		oninvalid="this.setCustomValidity('Por Favor insira uma localização')" 
		oninput="setCustomValidity('')"
		id="LocalizacaoPesquisa" placeholder="Localização" />

		<select name="CategoriaPesquisa" required
		oninvalid="this.setCustomValidity('Por Favor insira uma categoria')" 
		oninput="setCustomValidity('')" id="CategoriaPesquisa" asp-items="ViewBag.CategoriaNome">
		</select>

	<input type="date" name="DataInicialPesquisa" required
		oninvalid="this.setCustomValidity('Por Favor insira uma data')" 
		oninput="setCustomValidity('')"
	    id="DateInicialPesquisa" />

	<input type="date" name="DataFinalPesquisa" required
		oninvalid="this.setCustomValidity('Por Favor insira uma data')" 
		oninput="setCustomValidity('')"
	    id="DateFinalPesquisa" />

        <button type="submit" class="btn btn-primary">Pesquisar</button>
		</div>
}
